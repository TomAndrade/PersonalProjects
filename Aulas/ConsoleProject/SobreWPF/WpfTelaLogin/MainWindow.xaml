<Window x:Class="WpfTelaLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTelaLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="3" Content="Login" Grid.Row="1" Grid.ColumnSpan="4" Margin="4,4,4,4" FontSize="42" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
        <Label Grid.Column="1" Content="User:" Grid.Row="3" Grid.ColumnSpan="2" VerticalContentAlignment="Center" FontSize="14" Margin="4,4,4,4"/>
        <Label Grid.Column="1" Content="Password:" Grid.Row="5" Grid.ColumnSpan="2" VerticalContentAlignment="Center" FontSize="14" Margin="4,4,4,4"/>
        <TextBox x:Name="textBoxUser" Grid.Column="1" Grid.ColumnSpan="8" Margin="4,4,4,4" Grid.Row="4" TextWrapping="Wrap" FontSize="16"/>
        <PasswordBox x:Name="passboxPass" Grid.Column="1" Grid.ColumnSpan="8" Margin="4,4,4,4" Grid.Row="6" FontSize="16"/>
        <Button x:Name="buttonEnter" Grid.Column="1" Content="Enter" Margin="2,4,1,4" Grid.Row="8" Grid.ColumnSpan="8" Width="377" FontSize="14" Click="buttonEnter_Click"/>

    </Grid>
</Window>
